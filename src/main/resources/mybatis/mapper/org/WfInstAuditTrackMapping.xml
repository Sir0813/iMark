            `nodeid`,
            `status`,
            `file_string`
        )
        VALUES
            (
                (
                    SELECT
                        wf_instance_id
                    FROM
                        biz_item_apply
                    WHERE
                        applyid = #{applyid}
                ),
                #{userId},
                (
                    SELECT
                        nodeid
                    FROM
                        wf_instance
                    WHERE
                        id = (
                            SELECT
                                wf_instance_id
                            FROM
                                biz_item_apply
                            WHERE
                                applyid = #{applyid}
                        )
                ),
                '2',
                #{fileString}
            )
